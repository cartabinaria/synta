{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/cartabinaria/synta/synta",
  "$ref": "#/$defs/Synta",
  "$defs": {
    "Definition": {
      "properties": {
        "Comments": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "Regexp": {
          "$ref": "#/$defs/Regexp"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Comments",
        "Regexp"
      ]
    },
    "Filename": {
      "properties": {
        "Segments": {
          "items": {
            "$ref": "#/$defs/Segment"
          },
          "type": "array"
        },
        "Extension": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Segments",
        "Extension"
      ]
    },
    "Regexp": {
      "properties": {},
      "additionalProperties": false,
      "type": "object"
    },
    "Segment": {
      "properties": {
        "Kind": {
          "type": "integer"
        },
        "Value": {
          "type": "string"
        },
        "Subsegments": {
          "items": {
            "$ref": "#/$defs/Segment"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Kind",
        "Value",
        "Subsegments"
      ]
    },
    "Synta": {
      "properties": {
        "Definitions": {
          "patternProperties": {
            ".*": {
              "$ref": "#/$defs/Definition"
            }
          },
          "type": "object"
        },
        "Filename": {
          "$ref": "#/$defs/Filename"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Definitions",
        "Filename"
      ]
    }
  }
}
